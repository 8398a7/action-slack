{
  "name": "action-slack",
  "version": "3.9.2",
  "description": "You can notify slack of GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build -m",
    "test": "jest && codecov",
    "test-for-local": "jest",
    "all": "npm run build && npm run format-check && npm run lint && npm run pack && npm test",
    "release": "npm run build && npm run pack",
    "prepare-release": "./scripts/prepare-release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/8398a7/action-slack.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "chat",
    "slack"
  ],
  "author": "8398a7",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@slack/webhook": "^6.0.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@types/semver": "^7.3.7",
    "@typescript-eslint/parser": "^4.28.4",
    "@vercel/ncc": "^0.29.0",
    "codecov": "^3.8.3",
    "eslint": "^7.31.0",
    "eslint-plugin-github": "^4.1.5",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.0.6",
    "jest-circus": "^27.0.6",
    "js-yaml": "^4.1.0",
    "nock": "^13.1.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  }
}
