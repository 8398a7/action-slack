{
  "name": "action-slack",
  "version": "3.9.1",
  "description": "You can notify slack of GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build -m",
    "test": "jest && codecov",
    "test-for-local": "jest",
    "all": "npm run build && npm run format-check && npm run lint && npm run pack && npm test",
    "release": "npm run build && npm run pack",
    "prepare-release": "./scripts/prepare-release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/8398a7/action-slack.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "chat",
    "slack"
  ],
  "author": "8398a7",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@slack/webhook": "^5.0.4",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.20",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/parser": "^4.12.0",
    "@vercel/ncc": "^0.26.1",
    "codecov": "^3.8.1",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.1",
    "nock": "^13.0.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
