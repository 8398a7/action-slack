{
  "name": "action-slack",
  "version": "3.4.0",
  "private": true,
  "description": "You can notify slack of GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest && codecov",
    "test-for-local": "jest",
    "all": "npm run build && npm run format-check && npm run lint && npm run pack && npm test",
    "release": "npm run build && npm run pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/8398a7/action-slack.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "chat",
    "slack"
  ],
  "author": "8398a7",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@slack/webhook": "^5.0.3",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/semver": "^7.3.1",
    "@typescript-eslint/parser": "^3.4.0",
    "@zeit/ncc": "^0.22.3",
    "codecov": "^3.7.0",
    "eslint": "^7.3.1",
    "eslint-plugin-github": "^4.0.1",
    "eslint-plugin-jest": "^23.17.1",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "js-yaml": "^3.14.0",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  }
}
